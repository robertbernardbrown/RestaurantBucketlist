<div class="jumbotron text-center">
  <h1>Restaurant Bucketlist</h1>
</div>

<div class="page-header text-center">
  <h2>Restaurants to Visit</h2>
</div>

<ul>
  {{#each restaurant}}
    {{#unless this.visited}}
      {{> restaurants/restaurant-block visited=1}}
    {{/unless}}
  {{/each}}
</ul>

<div class="page-header text-center">
  <h2>Visited</h2>
</div>

<ul>
  {{#each restaurant}}
    {{#if this.visited}}
      {{> restaurants/restaurant-block visited=0}}
    {{/if}}
  {{/each}}
</ul>

<div class="page-header text-center">
<h2>Add to your bucketlist!</h2>
</div>
<form class="create-form">
  <div class="form-group">
    <label for="rest">Restaurant Name:</label>
    <input type="text" id="rest" name="name">
    <button class="btn btn-primary" type="submit">Add Restaurant</button>
  </div>
</form>