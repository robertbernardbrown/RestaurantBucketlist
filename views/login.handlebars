<div class="jumbotron text-center">
  <h1>Restaurant Bucketlist</h1>
  <p>Login Page</p>
  <a href="/register">
    <button type="register" class="btn btn-primary">Register</button>
  </a>
  <a href="/bucketlist">
    <button type="bucketlist" class="btn btn-primary">Bucketlist</button>
  </a>
</div>

{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">
        {{this.msg}}
    </div>
  {{/each}}
{{/if}}

<form method="POST" action="/login">
  <div class="form-group">
    <label for="exampleUserName1">Username</label>
    <input type="username" name="username" class="form-control" id="exampleUsername1" aria-describedby="usernameHelp" placeholder="Enter username">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  <div class="form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Remember Password</label>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>