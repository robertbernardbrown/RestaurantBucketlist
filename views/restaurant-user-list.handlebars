<div class="page-header text-center">
  <h2>Bucketlist</h2>
</div>

  <ul>
    {{#each restaurant}}
      {{#unless this.visited}}
        {{> restaurants/restaurant-block visited=1}}
      {{/unless}}
    {{/each}}
  </ul>

<div class="page-header text-center">
  <h2>Visited</h2>
</div>

  <ul>
    {{#each restaurant}}
      {{#if this.visited}}
        {{> restaurants/restaurant-block visited=0}}
      {{/if}}
    {{/each}}
  </ul>

<div class="page-header text-center">
<h2>Add to your bucketlist</h2>
</div>
<form class="create-form">
  <div class="form-group col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
    <label for="rest">Restaurant Name:</label>
    <input type="text" id="rest" name="name">
  </div>
    <button class="btn btn-primary btn-block submit-btn" type="submit">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      Add Restaurant</button>
</form>